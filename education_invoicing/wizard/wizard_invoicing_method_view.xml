<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="view_wizard_invoicing_method_course_form" model="ir.ui.view">
      <field name="name">view.wizard.invoicing.method.form</field>
      <field name="model">wizard.invoicing.method</field>
      <field name="arch" type="xml">
        <form string="Invoicing Method">
          <sheet>
            <group name="main" col="4">
              <field name="invoicing_method_id"/>
              <field name="amount" />
            </group>
          </sheet>
          <footer>
            <button name="get_course_invoicing_lines" class="oe_highlight" type="object" string="Save"/>
            or
            <button class="oe_link" special="cancel" string="Cancel"/>
          </footer>
        </form>
      </field>
    </record>

    <record id="view_wizard_invoicing_method_group_form" model="ir.ui.view">
      <field name="name">view.wizard.invoicing.method.group.form</field>
      <field name="model">wizard.invoicing.method</field>
      <field name="arch" type="xml">
        <form string="Invoicing Method">
          <sheet>
            <group name="main" col="4">
              <field name="invoicing_method_id"/>
              <field name="amount" />
            </group>
          </sheet>
          <footer>
            <button name="get_group_invoicing_lines" class="oe_highlight" type="object" string="Save"/>
            or
            <button class="oe_link" special="cancel" string="Cancel"/>
          </footer>
        </form>
      </field>
    </record>

    <record id="view_wizard_invoicing_method_education_enrollment_form" model="ir.ui.view">
      <field name="name">view.wizard.invoicing.method.form</field>
      <field name="model">wizard.invoicing.method</field>
      <field name="arch" type="xml">
        <form string="Invoicing Method">
          <sheet>
            <group name="main" col="4">
              <field name="invoicing_method_id"/>
              <field name="amount" />
            </group>
          </sheet>
          <footer>
            <button name="get_education_enrollment_invoicing_lines" class="oe_highlight" type="object" string="Save"/>
            or
            <button class="oe_link" special="cancel" string="Cancel"/>
          </footer>
        </form>
      </field>
    </record>

    <record id="wizard_invoicing_method_action_1" model="ir.actions.act_window">
      <field name="name">Invoicing Method</field>
      <field name="res_model">wizard.invoicing.method</field>
      <field name="src_model">education.course</field>
      <field name="view_mode">tree,form</field>
      <field name="view_id" ref="view_wizard_invoicing_method_course_form"/>
      <field name="target">new</field>
    </record>

    <record id="wizard_invoicing_method_action_2" model="ir.actions.act_window">
      <field name="name">Invoicing Method</field>
      <field name="res_model">wizard.invoicing.method</field>
      <field name="src_model">education.group</field>
      <field name="view_mode">tree,form</field>
      <field name="view_id" ref="view_wizard_invoicing_method_group_form"/>
      <field name="target">new</field>
    </record>

    <record id="wizard_invoicing_method_action_3" model="ir.actions.act_window">
      <field name="name">Invoicing Method</field>
      <field name="res_model">wizard.invoicing.method</field>
      <field name="src_model">education.enrollment</field>
      <field name="view_mode">tree,form</field>
      <field name="view_id" ref="view_wizard_invoicing_method_education_enrollment_form"/>
      <field name="target">new</field>
    </record>

  </data>
</odoo>
